    <title>Function on Objects</title>
</head>
<body>
    <h1>Function on Objects</h1>
    <p id="result"></p>
    <script>
        const obj = {
            name: "Alice",
            greet() {
                return `Hello, ${this.name}`;
            }
        };
        document.getElementById('result').textContent = obj.greet();
    </script>
</body>
